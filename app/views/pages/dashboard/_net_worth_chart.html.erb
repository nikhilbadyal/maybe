<%# locals: (balance_sheet:, period:, **args) %>

<div id="net-worth-chart">
  <% series = balance_sheet.net_worth_series(period: period) %>
  <div class="flex justify-between gap-4 px-4">
    <div class="space-y-2">
      <div class="space-y-2">
        <div class="flex items-center gap-2">
          <p class="text-sm text-secondary font-medium"><%= t(".title") %></p>
        </div>

        <p class="text-primary -space-x-0.5 text-3xl font-medium <%= "animate-pulse" if balance_sheet.syncing? %>">
          <%= series.trend.current.format %>
        </p>

        <% if series.trend.nil? %>
          <p class="text-sm text-secondary"><%= t(".data_not_available") %></p>
        <% else %>
          <%= render partial: "shared/trend_change", locals: { trend: series.trend, comparison_label: period.comparison_label } %>
        <% end %>
      </div>
    </div>

    <div class="flex items-center gap-2 ml-auto">

    <%= render DS::Menu.new(variant: "button", no_padding: true) do |menu| %>
      <% menu.with_button(
        id: "net-worth-period-menu-btn",
        type: "button",
        text: period.label_short,
        variant: "outline",
        icon: "calendar"
      ) %>

      <% menu.with_custom_content do %>
        <div class="p-3 w-[min(92vw,440px)]">
          <%= form_with url: root_path, method: :get, data: { controller: "period-selector" } do |form| %>
            <%= form.select :period,
                          (Period.as_options + [["Custom", "custom"]]),
                          { selected: period.key },
                          data: { action: "change->period-selector#toggleDateInputs", "period-selector-target": "select" },
                          class: "bg-container border border-secondary font-medium rounded-lg px-3 py-2 text-sm pr-7 cursor-pointer text-primary focus:outline-hidden focus:ring-0 w-full" %>

            <div class="flex flex-col sm:flex-row sm:flex-wrap items-stretch sm:items-center gap-2 mt-2 <%= 'hidden' unless period.key == 'custom' %>" data-period-selector-target="customDateInputs">
              <% common_input_classes = "bg-container border border-secondary font-medium rounded-lg px-3 py-2 text-sm text-primary focus:outline-hidden focus:ring-0 w-full sm:flex-1" %>
              <% is_custom = period.key == 'custom' %>
              <% start_date_value = is_custom ? period.start_date : nil %>
              <% end_date_value = is_custom ? period.end_date : nil %>

              <%= date_field_tag (is_custom ? :start_date : nil),
                                  start_date_value,
                                  placeholder: "Start date",
                                  aria: { label: "Start date" },
                                  max: Date.current,
                                  disabled: !is_custom,
                                  data: { "period-selector-target": "startDate" },
                                  class: common_input_classes %>
              <span class="text-secondary text-sm text-center sm:text-left">to</span>
              <%= date_field_tag (is_custom ? :end_date : nil),
                                  end_date_value,
                                  placeholder: "End date",
                                  aria: { label: "End date" },
                                  max: Date.current,
                                  disabled: !is_custom,
                                  data: { "period-selector-target": "endDate" },
                                  class: common_input_classes %>
              <button type="button" data-action="click->period-selector#submitForm" class="bg-container border border-secondary rounded-lg px-3 py-2 text-sm font-medium text-primary w-full sm:w-full md:w-auto">Apply</button>
            </div>
          <% end %>

          <% if series.any? %>
            <div class="mt-3">
              <%= render DS::Link.new(
                text: "Download CSV",
                href: download_net_worth_data_path(download_net_worth_data_link_params(period)),
                icon: "download",
                variant: :outline,
                class: "w-full justify-center"
              ) %>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
  </div>

  <% if series.any? %>
    <div
    id="netWorthChart"
    class="w-full flex-1 min-h-52"
    data-controller="time-series-chart"
    data-time-series-chart-data-value="<%= series.to_json %>"></div>
  <% else %>
    <div class="w-full h-full flex items-center justify-center">
      <p class="text-secondary text-sm"><%= t(".data_not_available") %></p>
    </div>
  <% end %>

</div>
