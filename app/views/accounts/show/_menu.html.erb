<%# locals: (account:) %>

<%= render DS::Menu.new(testid: "account-menu") do |menu| %>
  <% menu.with_item(variant: "link", text: "Edit", href: edit_account_path(account), icon: "pencil-line", data: { turbo_frame: :modal }) %>

  <% unless account.crypto? %>
    <% menu.with_item(
      variant: "button",
      text: "Import transactions",
      href: imports_path({ import: { type: account.investment? ? "TradeImport" : "TransactionImport", account_id: account.id } }),
      method: :post,
      icon: "download",
      data: { turbo_frame: :_top }
    ) %>
  <% end %>

  <% unless account.linked? %>
    <% menu.with_item(
      variant: "button",
      text: "Purge transactions",
      href: purge_transactions_account_path(account),
      method: :delete,
      icon: "eraser",
      confirm: CustomConfirm.new(
        title: "Purge transactions?",
        body: "This will delete all transactions for this account except the opening balance. This cannot be undone.",
        btn_text: "Purge",
        destructive: true,
        high_severity: true
      ),
      data: { turbo_frame: :_top }
    ) %>

    <% menu.with_item(
      variant: "button",
      text: "Delete account",
      href: account_path(account),
      method: :delete,
      icon: "trash-2",
      confirm: CustomConfirm.for_resource_deletion("account", high_severity: true),
      data: { turbo_frame: :_top }
    ) %>
  <% end %>
<% end %>
