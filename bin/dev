#!/usr/bin/env sh
set -euo pipefail

# ---------------------------
# Environment defaults
# ---------------------------
: "${PORT:=3000}"                  # default port
export PORT

# Allow debug gem to accept remote connections lazily
export RUBY_DEBUG_OPEN="true"
export RUBY_DEBUG_LAZY="true"

# ---------------------------
# Start services
# ---------------------------
exec bundle exec foreman start -f Procfile.dev "$@"
